<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-image: url('../../Content/image/bg2.jpg');">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("STUDENT", "Index", "Students", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @using (Html.BeginForm("Search", "Students", FormMethod.Get))
                {
                    <ul class="nav navbar-nav">

                        <li>@Html.ActionLink("Books List", "BookListStudent", "Students")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                        <li style="width:300px;left:10px;top:10px"><input class="form-control" type="text" name="Search"></li>
                        <li style="top:10px;left:20px">
                            <button class="btn btn-outline-success " type="submit">Search</button>
                        </li>
                    </ul>
                }
                    <ul class="nav navbar-nav navbar-right">
                        @if (Session["SID"] != null)
                        {
                            <li style="top:10px;left:20px;color:white">Hellow @Session["Sname"].ToString()</li>
                            <li style="bottom:5px; left:20px;">
                                <a href="@Url.Action("Logout","Students")">LOGOUT!!</a>
                            </li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("SIGNIN", "Login", "Students")</li>
                            <li>@Html.ActionLink("SIGNUP", "Create", "Students")</li>
                        }

                    </ul>

                </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
