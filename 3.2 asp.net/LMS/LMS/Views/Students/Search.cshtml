@model IEnumerable<LMS.Models.Book2>


@{
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    ViewBag.Title = "Search";
}



<div class="container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading"> product</div>
                <div class="panel-body">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4">

                            <div class="panel panel-info">
                                <div class="panel-heading">  @Html.DisplayFor(modelItem => item.Book_title)</div>
                                <div class="panel-body">
                                    <img src="" />
                                </div>
                                <div class="panel-heading">
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                    <li style="float:right"> @Html.ActionLink("Add Book", "newbook", new { id = item.Bid })</li>

                                </div>
                            </div>
                        </div>
                    }

                </div>

            </div>
        </div>

    </div>
</div>
